{
    "compileOnSave": false,
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "moduleResolution": "node",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "removeComments": true,
        "noImplicitAny": false,
        "outDir": "./tsrc",
        "typeRoots": [
            "node_modules/@types"
        ],
    },

    "exclude": [
        "./node_modules"
    ]
}